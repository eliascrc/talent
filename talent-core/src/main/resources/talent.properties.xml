<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="talent.jdbc.driver" value="${jdbc.driver}"/>
        <property name="talent.jdbc.url" value="${jdbc.url}"/>
        <property name="talent.jdbc.username" value="${jdbc.username}"/>
        <property name="talent.jdbc.password" value="${jdbc.password}"/>
        <property name="talent.hibernate.dialect" value="${hibernate.dialect}"/>
    </bean>
</beans>